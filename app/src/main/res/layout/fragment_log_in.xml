<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".SignInLogInForget.LogInFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#3B4FD6">

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="93dp"
            android:layout_marginBottom="141dp"
            android:src="@drawable/__2025_01_24_172259"
            app:layout_constraintBottom_toTopOf="@+id/EtEmailForget"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="365dp"
            android:layout_height="326dp"
            android:layout_marginBottom="16dp"
            android:src="@android:drawable/screen_background_light_transparent"
            app:layout_constraintBottom_toTopOf="@+id/etGotoLoginfromPass"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/et" />

        <EditText
            android:id="@+id/EtEmailForget"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="76dp"
            android:layout_marginEnd="76dp"
            android:layout_marginBottom="56dp"
            android:background="#FAF3FB"
            android:ems="10"
            android:hint="Email"
            android:inputType="textEmailAddress"
            app:layout_constraintBottom_toTopOf="@+id/etPasswordLogin"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView6" />

        <EditText
            android:id="@+id/etPasswordLogin"
            android:layout_width="256dp"
            android:layout_height="0dp"
            android:layout_marginBottom="37dp"
            android:background="#FCF5FD"
            android:ems="10"
            android:hint="Password"
            android:inputType="textPassword"
            app:layout_constraintBottom_toTopOf="@+id/btnforget"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.503"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/EtEmailForget" />

        <TextView
            android:id="@+id/et"
            android:layout_width="129dp"
            android:layout_height="0dp"
            android:layout_marginEnd="62dp"
            android:layout_marginBottom="29dp"
            android:text="LogIn"
            android:textColor="#F4F1F1"
            android:textSize="20sp"
            app:layout_constraintBottom_toTopOf="@+id/imageView7"
            app:layout_constraintEnd_toEndOf="@+id/imageView6"
            app:layout_constraintTop_toBottomOf="@+id/imageView6" />

        <Button
            android:id="@+id/btnforget"
            android:layout_width="104dp"
            android:layout_height="0dp"
            android:layout_marginEnd="65dp"
            android:layout_marginBottom="194dp"
            android:foreground="@drawable/__2025_01_26_121243"
            android:text="Sign iUp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/etPasswordLogin"
            app:layout_constraintTop_toBottomOf="@+id/etPasswordLogin" />

        <TextView
            android:id="@+id/etGotoLoginfromPass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="21dp"
            android:layout_marginBottom="25dp"
            android:text="SignUp"
            android:textColor="#F2F0F0"
            app:layout_constraintBottom_toTopOf="@+id/etGoToSigUpFromPass"
            app:layout_constraintStart_toStartOf="@+id/etGoToSigUpFromPass"
            app:layout_constraintTop_toBottomOf="@+id/imageView7" />

        <TextView
            android:id="@+id/etGoToSigUpFromPass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="142dp"
            android:layout_marginBottom="91dp"
            android:text="Forget Password"
            android:textColor="#F2F1F1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/etGotoLoginfromPass" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>