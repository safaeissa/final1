<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".SignInLogInForget.ForgetPasswordFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/__2025_02_25_145540">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="244dp"
            android:layout_height="38dp"
            android:layout_marginBottom="28dp"
            android:text="Health Mate"
            android:textColor="@color/Blue"
            android:textSize="34sp"
            app:layout_constraintBottom_toTopOf="@+id/et"
            tools:layout_editor_absoluteX="99dp" />

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="328dp"
            android:layout_height="348dp"
            android:src="?android:attr/listDivider"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteY="189dp" />

        <TextView
            android:id="@+id/et"
            android:layout_width="148dp"
            android:layout_height="25dp"
            android:layout_marginBottom="20dp"
            android:text="Forget Password"
            android:textColor="@color/Blue"
            android:textSize="16sp"
            app:layout_constraintBottom_toTopOf="@+id/imageView7"
            tools:layout_editor_absoluteX="143dp" />

        <TextView
            android:id="@+id/etGotoLoginfromPass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:text="Log In "
            android:textColor="#F2F0F0"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/etGoToSigUpFromPass" />

        <TextView
            android:id="@+id/etGoToSigUpFromPass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="37dp"
            android:text="Sign Up"
            android:textColor="#F2F1F1"
            app:layout_constraintTop_toBottomOf="@+id/imageView7"
            tools:layout_editor_absoluteX="179dp" />

        <TextView
            android:id="@+id/btnforget"
            android:layout_width="125dp"
            android:layout_height="0dp"
            android:layout_marginTop="124dp"
            android:background="@color/BtnColor"
            android:text="    Sent Email"
            android:textColor="@color/white"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/etEmailForget" />

        <EditText
            android:id="@+id/etEmailForget"
            android:layout_width="214dp"
            android:layout_height="47dp"
            android:layout_marginTop="84dp"
            android:background="@color/white"
            android:ems="10"
            android:hint="Email"
            android:inputType="textEmailAddress"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/imageView7" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>

