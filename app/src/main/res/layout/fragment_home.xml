<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainPages.HomeFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="442dp"
        android:layout_height="match_parent"
        android:background="@drawable/__2025_02_04_182841">

        <ImageButton
            android:id="@+id/goToAi"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginStart="31dp"
            android:layout_marginEnd="39dp"
            android:layout_marginBottom="109dp"
            android:background="@color/white"
            android:src="@drawable/__2025_02_04_190002"
            app:layout_constraintBottom_toTopOf="@+id/GotoSport"
            app:layout_constraintEnd_toStartOf="@+id/GotoFood"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textNameUser" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="55dp"
            android:layout_marginBottom="70dp"
            app:layout_constraintBottom_toTopOf="@+id/GotoFood"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/textNameUser"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@tools:sample/avatars" />

        <TextView
            android:id="@+id/textWelcom"
            android:layout_width="170dp"
            android:layout_height="38dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="52dp"
            android:text="Welcome back "
            android:textColor="@color/BtnColor"
            android:textSize="24sp"
            app:layout_constraintBottom_toTopOf="@+id/textNameUser"
            app:layout_constraintEnd_toStartOf="@+id/imageView"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textNameUser"
            android:layout_width="156dp"
            android:layout_height="84dp"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="27dp"
            android:layout_marginBottom="67dp"
            android:text="User "
            android:textColor="@color/BtnColor"
            android:textSize="34sp"
            app:layout_constraintBottom_toTopOf="@+id/goToAi"
            app:layout_constraintEnd_toStartOf="@+id/imageView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textWelcom" />

        <ImageButton
            android:id="@+id/GotoFood"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginEnd="66dp"
            android:layout_marginBottom="113dp"
            android:background="@color/white"
            android:src="@drawable/__2025_02_04_190230"
            app:layout_constraintBottom_toTopOf="@+id/GoToHealth"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/goToAi"
            app:layout_constraintTop_toBottomOf="@+id/imageView" />

        <ImageButton
            android:id="@+id/GotoSport"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginStart="29dp"
            android:layout_marginEnd="31dp"
            android:layout_marginBottom="209dp"
            android:background="@color/white"
            android:src="@drawable/__2025_02_04_190326"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/GoToHealth"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/goToAi" />

        <ImageButton
            android:id="@+id/GoToHealth"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginEnd="75dp"
            android:layout_marginBottom="209dp"
            android:background="@color/white"
            android:src="@drawable/__2025_02_04_190623"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/GotoSport"
            app:layout_constraintTop_toBottomOf="@+id/GotoFood" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>
