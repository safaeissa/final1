<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainPages.SettingsFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp"
        android:background="@drawable/__2025_02_25_145540">

        <ImageButton
            android:id="@+id/imgbutnSitting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:src="@drawable/icons8_back_26"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imgPr"
            android:layout_width="291dp"
            android:layout_height="116dp"
            android:scaleType="centerCrop"
            android:src="@drawable/_522516"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/etNamePr"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:hint="Full Name"
            android:inputType="textPersonName"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/imgPr" />

        <EditText
            android:id="@+id/etAgePr"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="Age"
            android:inputType="number"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/etNamePr"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <EditText
            android:id="@+id/weightPr"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="Weight (kg)"
            android:inputType="number"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/etAgePr"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <EditText
            android:id="@+id/hightPr"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="Height (cm)"
            android:inputType="number"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/weightPr"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <Button
            android:id="@+id/btnUpdate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Update Profile"
            android:textColor="#FFFFFF"
            android:backgroundTint="#06162F"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/hightPr"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <Button
            android:id="@+id/btnLogout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Log Out"
            android:textColor="#FFFFFF"
            android:backgroundTint="#06162F"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/btnUpdate"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <Button
            android:id="@+id/DeleteAccount"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Delete Account"
            android:textColor="#FFFFFF"
            android:backgroundTint="#B00020"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/btnLogout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>
